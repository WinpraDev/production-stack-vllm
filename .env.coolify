# Model Configuration
MODEL_NAME=facebook/opt-125m
HUGGING_FACE_HUB_TOKEN=your-hf-token-here

# vLLM Configuration
VLLM_API_KEY=your-secure-api-key-here
MAX_MODEL_LEN=2048
GPU_MEMORY_UTILIZATION=0.95
TENSOR_PARALLEL_SIZE=1
DTYPE=auto
TRUST_REMOTE_CODE=false
VLLM_ALLOW_LONG_MAX_MODEL_LEN=1

# Router Configuration
ROUTING_LOGIC=roundrobin
ENGINE_SCRAPE_INTERVAL=15
REQUEST_STATS_WINDOW=60

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-password-here

# Resource Limits (adjust based on your GPU)
# For A100: Use higher values
# MAX_MODEL_LEN=32768
# GPU_MEMORY_UTILIZATION=0.95

# For smaller GPUs (T4, RTX 3090): Use lower values
# MAX_MODEL_LEN=8192
# GPU_MEMORY_UTILIZATION=0.90